                     <children>
                        <Label prefHeight="225.0" prefWidth="859.0" text="1. Go to the &quot;File&quot; menu at the top of the screen." wrapText="true">
                           <font>
                              <Font name="Lucida Sans Typewriter Regular" size="12.0" />
                           </font>
                        </Label>
                        <Label prefHeight="231.0" prefWidth="962.0" text="2. Click on &quot;New List&quot; and the list will be cleared. " wrapText="true" GridPane.rowIndex="1">
